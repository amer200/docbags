<%- include('../parts/head') %>


    <body>
        <%- include('../parts/header') %>
            <link rel="stylesheet" href="/css/doc-view.css">
            <span class="doc-type">
                <%= doc.doctype%> /
            </span>
            <span class="item-type">
                <%=doc.itemtype%>
            </span>
            <div class="doc-container">
                <div id="GFG" class="container">
                    <% if(mime=='img' ){%>
                        <img id="myDoc" src='/<%= doc.path %>' />
                        <%}else{%>
                            <embed id="myDoc" src="/<%= doc.path %>" width="100%" height="450px">
                            <%}%>
                </div>
            </div>
            <div class="btns">
                <div class="contaner">
                    <div class="row">
                        <form action="/delete-doc/<%=doc.id%>" method='post' id="deleteForm"></form><button class="btn"
                            id='delete'>
                            delete</button>
                        <button class="btn" id='print' onclick="printDiv()"> print</button>
                        <button class="btn" id='share' data-bs-toggle="modal"
                            data-bs-target="#exampleModal">share</button>

                    </div>
                </div>
            </div>
            <%- include('../parts/footer') %>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <button class="btn btn-dark" onclick="fbs_click()">share</button>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script>
                        function printDiv() {
                            var divContents = document.getElementById("GFG").innerHTML;
                            var a = window.open('', '');
                            a.document.write('<html>');
                            a.document.write('<body >');
                            a.document.write(divContents);
                            a.document.write('</body></html>');
                            document.getElementById("GFG").style.width = '500px';
                            a.document.close();
                            a.print();
                        }
                    </script>
                    <script src="/js/doc-view.js"></script>
    </body>

    </html>