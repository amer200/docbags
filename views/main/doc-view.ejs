<%- include('../parts/head') %>


    <body>
        <%- include('../parts/header') %>
            <link rel="stylesheet" href="/css/doc-view.css">
            <span class="doc-type">
                <%= doc.doctype%> /
            </span>
            <span class="item-type">
                <%=doc.itemtype%>
            </span>
            <div class="doc-container">
                <div id="GFG" class="container">
                    <% if(mime=='img' ){%>
                        <img src='/<%= doc.path %>' />
                        <%}else{%>
                            <embed src="/<%= doc.path %>" width="100%" height="450px">
                            <%}%>
                </div>
            </div>
            <div class="btns">
                <div class="contaner">
                    <div class="row">
                        <form action="/delete-doc/<%=doc.id%>" method='post' id="deleteForm"></form><button class="btn" id='delete'>
                            delete</button>
                        <button class="btn" id='print' onclick="printDiv()"> print</button>
                        <button class="btn" id='share'> share</button>

                    </div>
                </div>
            </div>
            <%- include('../parts/footer') %>
                <script>
                    function printDiv() {
                        var divContents = document.getElementById("GFG").innerHTML;
                        var a = window.open('', '');
                        a.document.write('<html>');
                        a.document.write('<body >');
                        a.document.write(divContents);
                        a.document.write('</body></html>');
                        document.getElementById("GFG").style.width = '500px';
                        a.document.close();
                        a.print();
                    }
                </script>
                <script src="/js/doc-view.js"></script>
    </body>

    </html>